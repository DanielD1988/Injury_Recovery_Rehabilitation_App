<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Views.ShowPatientExercisePlan"
             xmlns:forms="clr-namespace:MediaManager.Forms;assembly=MediaManager.Forms">
    <ScrollView>
        <StackLayout>
            <forms:VideoView x:Name="video1" HeightRequest="202"  
                                 WidthRequest="202"/>
            <StackLayout Orientation="Horizontal">
                <Label  
                       Margin="40, 20, 40, 5"
                       Text="Exercise Video 1"  
                       FontSize="20"  
                       TextColor="Black"/>
                <Button  
                        x:Name="PlayVideo1"  
                        Text="Play" 
                        Clicked="showVideo1"  
                        TextColor="Black"/>
            </StackLayout>
            <Label Text="Exercise Video 2"  
                       FontSize="20"  
                       Margin="30, 20, 15, 5"
                       TextColor="Black"/>
            <Button x:Name="PlayVideo2"  
                        Text="Play"   
                        Clicked="showVideo2"  
                        TextColor="Black"/>
        </StackLayout>
    </ScrollView>
</ContentPage>