<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.MainPage">

    <StackLayout
        VerticalOptions="Center"
        Margin="20">

        <Label
            Text="Injury Recovery Login"
            HorizontalOptions="Center"
            TextColor="SteelBlue"
            FontAttributes="Bold"
            FontSize="35"
            Margin="0, 80"
            />
        <Entry
            Placeholder="E-mail"
            Keyboard="Email"
            x:Name="email"
            TextChanged="emailtextChanged"
            />

        <Entry
            Placeholder="Password"
            IsPassword="true"
            x:Name="pass"
            TextChanged="passwordtextChanged"
            />

        <Button
            Text="Login"
            Clicked="LoginClicked"
            Margin="60, 30"
            BackgroundColor="SteelBlue"
            TextColor="White"
            CornerRadius="10"
            FontAttributes="Bold"
            />
        <Button
            Text="Register"
            Clicked="RegisterClicked"
            Margin="60, 0"
            BackgroundColor="SteelBlue"
            TextColor="White"
            CornerRadius="10"
            FontAttributes="Bold"
            />
    </StackLayout>

</ContentPage>
