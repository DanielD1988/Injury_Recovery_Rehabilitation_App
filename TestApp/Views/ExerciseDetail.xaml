<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp.Views.ExerciseDetail">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Image}"/>
            <Label TextColor="Black" BackgroundColor="DodgerBlue" FontSize="Large" FontFamily="Arial"  HorizontalTextAlignment="Center" Text="{Binding exerciseName}"/>
            <Label Margin="15" FontSize = "18" Text="{Binding exerciseDescription}"/>
            <Label TextColor="Black" BackgroundColor="DodgerBlue" FontSize="Large" FontFamily="Arial"  HorizontalTextAlignment="Center" Text="Workout Description"/>
            <Label Margin="15" FontSize = "18" Text="{Binding exerciseInfo}"/>
            <Button TextColor="Black" Text="Add to Patient" BackgroundColor="DodgerBlue" Clicked="AddToPatient" CommandParameter="{Binding exerciseListKey}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>